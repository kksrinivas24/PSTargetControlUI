<Window x:Name="MainWindow1" x:Class="GUIForTarget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUIForTarget" WindowStartupLocation="CenterScreen"
        
        Title="Target Controls" Foreground="#FF9F0C0C" UseLayoutRounding="True" HorizontalAlignment="Center" VerticalAlignment="Center" Width="561" Height="436.2" BorderThickness="0" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF1E52E7" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <TabControl HorizontalAlignment="Left" Height="382" Margin="23,10,-6.4,0" VerticalAlignment="Top" Width="513">
        <TabItem Header="Main Controls" >
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FF1275E0" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <Grid Margin="0,0,0.2,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="352">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF3E86F0" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="148*"/>
                    <ColumnDefinition Width="359*"/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="StartLog" Content="Start Log" Grid.Column="2" HorizontalAlignment="Center" Margin="181.8,247,77.2,0" VerticalAlignment="Top" Width="100" Height="30" Background="#FF45CA7B" OpacityMask="#FF047315" RenderTransformOrigin="1.004,-1.679">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="StopLog" Content="Stop log" Grid.Column="2" HorizontalAlignment="Center" Margin="181.8,299,77.2,0" VerticalAlignment="Top" Width="100" Height="30" Background="#FFC35666">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="PushDMFT" Content="Push DMFT DLL" Grid.Column="1" HorizontalAlignment="Left" Margin="50,299,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.491,2.183" Grid.ColumnSpan="2">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="PushRearBin" Content="Push Rear Sensor binary" Grid.Column="1" HorizontalAlignment="Left" Margin="50,247,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.491,2.183" Grid.ColumnSpan="2">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="PushFrontBin" Content="Push Front sensor binary" Grid.Column="1" HorizontalAlignment="Left" Margin="51,194,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.491,2.183" Grid.ColumnSpan="2">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="PushAuxBin" Content="Push Aux sensor binary" Grid.Column="1" HorizontalAlignment="Left" Margin="50,147,0,0" VerticalAlignment="Top" Width="150" Height="30" RenderTransformOrigin="0.491,2.183" Grid.ColumnSpan="2">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <StackPanel Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="50" Margin="103,19,0,0" VerticalAlignment="Top" Width="318">
                    <TextBlock Foreground="White" Margin="22,0,258.4,0">Build:</TextBlock>
                </StackPanel>
                <TextBox x:Name ="BuildPath" Grid.Column="2" HorizontalAlignment="Left" Margin="10,19,0,0" TextWrapping="Wrap" Text="Build Path" VerticalAlignment="Top" Background="{x:Null}" Foreground="White"/>

            </Grid>
        </TabItem>
        <TabItem Header="Other controls" >
            <TabItem.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF0F0F0" Offset="0"/>
                    <GradientStop Color="#FF1275E0" Offset="1"/>
                </LinearGradientBrush>
            </TabItem.Background>
            <Grid Margin="0,0,0.2,1.4" HorizontalAlignment="Right" Width="507">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Color="#FF3E86F0" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="507.2"/>
                    <ColumnDefinition Width="0*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BasicCamSanity" Content="Basiccam Sanity" Grid.Column="1" HorizontalAlignment="Left" Margin="208,128,0,195" VerticalAlignment="Center" Width="100" Height="30" >
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="ListFileRepo" Content="List File Repo" Grid.Column="1" Margin="208,185,199.2,138" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="SetDevEnv" Content="Set Dev Env" Grid.Column="1" HorizontalAlignment="Left" Margin="209,242,0,81" VerticalAlignment="Center" Width="100" Height="30" >
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="Restart" Content="Restart target" Grid.Column="1" Margin="209,296,198.2,27" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFC35666">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </Grid>
        </TabItem>
    </TabControl>

</Window>